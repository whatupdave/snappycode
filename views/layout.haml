    %link{ :href=>'/reset.css',  :type=> 'text/css', :rel=>'stylesheet' }
    %link{ :href=>'/screen.css', :type=> 'text/css', :rel=>'stylesheet' }
  %body
    .header
      %h1
        %a{ :href => '/'} snappyco.de
      .sub_heading
        %a.rss{ :href => '/rss.xml' }
          %img{ :src => '/images/rss.png', :alt => 'rss'}
    
    #posts
      = yield
    
    #me
      .entry.photo
        %img{:src => '/images/me.jpg' }

      #about_me.entry
        %p I'm a sydney based software developer. I love building awesome stuff.

      .entry
        %h2
          %a{ :href => "http://twitter.com/whatupdave"} I'm on Twitter
        
        =tweets
        
      .entry
        %h2
          %a{ :href => "http://github.com/snappycode"} I'm on Github

        =github_repos
    
    #footer
      = markdown :footer
      
